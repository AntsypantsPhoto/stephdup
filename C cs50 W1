// fourth go at Mario final scene with steps
// user prompted for size between 1 and 8

#include <stdio.h>
#include <cs50.h>

int main(void)

{
    int n;
    do
    {
    n = get_int("height: ");
    }
    while (n < 1 || n > 8); 
    for (int h = 0; h < n; h++)
    {
        for (int w = 0; w < n; w++)
        {
            printf("#");
        }
        printf("\n");
    }

}

